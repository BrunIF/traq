<div class="content">
	<h2 id="page_title"><?php echo l('tickets')?></h2>
	<?php View::render('tickets/_filters'); ?>
	<?php View::render('tickets/_columns'); ?>
</div>
<table class="list">
	<thead>
		<tr>
	<?php foreach ($columns as $column) { ?>
			<th><a href="<?php echo ticket_sort_url_for($column == 'ticket_id' ? 'id' : $column); ?>"><?php echo ticketlist_header($column)?></a></th>
	<?php } ?>
		</tr>
	</thead>
	<tbody>
	<?php foreach ($tickets as $ticket) { ?>
		<tr>
			<?php foreach ($columns as $column) { ?>
				<?php if ($column == 'summary') { ?>
				<td><?php echo HTML::link($ticket->summary, "{$project->slug}/tickets/{$ticket->ticket_id}"); ?></td>
				<?php } elseif ($column == 'owner') { ?>
				<td><?php echo HTML::link(strshorten($ticket->user->name, 20), $ticket->user->href()); ?></td>
				<?php } else { ?>
				<td><?php echo ticketlist_data($column, $ticket); ?></td>
				<?php } ?>
			<?php } ?>
		</tr>
	<?php } ?>
	</tbody>
</table>
<?php if ($pagination->paginate) { ?>
<div class="content">
	<div class="pagination">
	<?php if ($pagination->prev_page_url) { ?>
		<a href="<?php echo $pagination->prev_page_url; ?>" class="prev_link"><?php echo l('previous'); ?></a>
	<?php } ?>
	<?php if ($pagination->next_page_url) { ?>
		<a href="<?php echo $pagination->next_page_url; ?>" class="next_link"><?php echo l('next'); ?></a>
	<?php } ?>
		<div class="clearfix"></div>
	</div>
</div>
<?php } ?>
